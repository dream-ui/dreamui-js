{
  "title": "TOOLS_JS",
  "source": "./src",
  "destination": "./reports/esdoc",
  "test": {
    "type": "mocha",
    "source": "./test/e2e/event/",
    "includes": ["\\.(spec|test)\\.js$"]
  },
  "includes": ["\\.(js|es6)$"],
  "excludes": ["\\.config\\.(js|es6)$"],
  "package": "./package.json",
  "coverage": true,
  "lint": true,
  "includeSource": true,
  "access": ["public", "protected", "private"],
  "index": "./README.md",
  "plugins": [
    {
      "name": "esdoc-importpath-plugin",
      "option": {
        "replaces": [
          {"from": "^src/", "to": "out/src/"}
        ]
      }
    }
  ]
}
