{
  "name": "dreamui-js",
  "version": "1.0.0",
  "description": "dreamui-js",
  "main": "index.js",
  "repository": "https://github.com/dream-ui/dreamui-js.git",
  "author": "xueboren <xueboren001@outlook.com>",
  "license": "MIT",
  "scripts": {
    "dev": "cross-env NODE_ENV=development && webpack-dev-server --inline --hot --colors --progress --config webpack.conf.js",
    "build": "rm -rf dist && yarn test:unit && cross-env NODE_ENV=production && webpack --config webpack.conf.js",
    "test": "yarn test:unit && yarn test:e2e",
    "test:unit": "yarn eslint && yarn mocha",
    "test:e2e": "yarn build && node_modules/nightwatch/bin/nightwatch --config build/nightwatch.config.js --reporter build/nightwatch-html-report.js --env chrome --test test/e2e/nightwatch",
    "mocha": "mocha test/unit",
    "eslint": "eslint --format node_modules/eslint-friendly-formatter src",
    "reports": "rm -rf reports && yarn eslint:html && yarn mocha:html && yarn istanbul:html && yarn esdoc:html",
    "esdoc:html": "esdoc -c .esdoc.json",
    "istanbul:html": "babel-node node_modules/.bin/babel-istanbul cover ./node_modules/mocha/bin/_mocha -- --opts ./test/mocha.opts test/unit",
    "mocha:html": "mocha --reporter mochawesome --reporter-options reportDir=reports/mocha,reportFilename=mocha-report,inlineAssets=true  test/unit",
    "eslint:html": "eslint --format html ./src/* -o ./reports/eslint/index.html",
    "istanbul:codecov": "babel-node ./node_modules/.bin/babel-istanbul cover ./node_modules/mocha/bin/_mocha --reporter lcovonly -- -R spec test/unit/**/*.spec.js && codecov",
    "appveyor:test": "yarn test:unit",
    "travis:test": "yarn test:unit"
  },
  "keywords": [
    "dream",
    "dreamui",
    "js",
    "es6",
    "dreamui-js"
  ],
  "devDependencies": {
    "babel": "^6.23.0",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.23.1",
    "babel-eslint": "^7.1.1",
    "babel-istanbul": "^0.12.2",
    "babel-loader": "^6.3.2",
    "babel-plugin-istanbul": "^4.1.3",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-env": "^1.4.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-stage-0": "^6.24.1",
    "chai": "^3.5.0",
    "chromedriver": "^2.29.0",
    "codecov": "^2.2.0",
    "cross-env": "^5.0.1",
    "esdoc": "^0.5.2",
    "esdoc-importpath-plugin": "^0.1.3",
    "eslint": "^3.16.1",
    "eslint-config-mocha": "^0.0.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-friendly-formatter": "^2.0.7",
    "eslint-loader": "^1.6.3",
    "eslint-plugin-chai-expect": "^1.1.1",
    "eslint-plugin-import": "^2.3.0",
    "eslint-plugin-mocha-only": "^0.0.3",
    "eslint-plugin-node": "^4.2.2",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "geckodriver": "^1.6.1",
    "html-webpack-plugin": "^2.28.0",
    "istanbul": "^0.4.5",
    "karma": "^1.7.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.1.1",
    "karma-mocha": "^1.3.0",
    "karma-webpack": "^2.0.3",
    "mocha": "^3.4.1",
    "mochawesome": "^2.2.0",
    "nightwatch": "^0.9.15",
    "nightwatch-helpers": "^1.2.0",
    "nightwatch-html-reporter": "^2.0.2",
    "phantomjs-prebuilt": "^2.1.14",
    "power-assert": "^1.4.2",
    "selenium-server": "^3.4.0",
    "thunk-mocha": "^1.0.8",
    "uglifyjs-webpack-plugin": "^0.2.1",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^2.4.1"
  }
}
