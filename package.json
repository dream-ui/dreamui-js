{
    "name": "quickstart-es6",
    "version": "1.0.0",
    "description": "es6 + webpack 环境快速搭建",
    "main": "index.js",
    "repository": "https://github.com/borenXue/QuickStart-es6.git",
    "author": "xueboren <xueboren001@outlook.com>",
    "license": "MIT",
    "scripts": {
        "dev": "export NODE_ENV=development && webpack-dev-server --inline --hot --colors --progress --config webpack.conf.js",
        "build": "yarn test && export NODE_ENV=production && webpack --config webpack.conf.js",
        "esdoc": "esdoc -c .esdoc.json",
        "test": "yarn eslint && yarn mocha",
        "mocha": "mocha test",
        "eslint": "eslint --format 'node_modules/eslint-friendly-formatter' src",
        "istanbul:codecov": "istanbul cover _mocha -- -R spec test/e2e/**/*.spec.js && codecov",
        "reports": "rm -rf reports && yarn eslint:html && yarn mocha:html && yarn istanbul:html",
        "istanbul:html": "rm -rf reports/coverage && istanbul cover _mocha -- --opts -R spec test/**/*.spec.js",
        "mocha:html": "rm -rf reports/mocha && mocha --reporter mochawesome --reporter-options reportDir=reports/mocha,reportFilename=mocha-report,inlineAssets=true  test",
        "eslint:html": "rm -rf reports/eslint && eslint --format html ./src/* -o ./reports/eslint/index.html",
        "appveyor:test": "yarn test",
        "travis:test": "yarn test"
    },
    "keywords": [
        "QuickStart",
        "es6",
        "eslint",
        "yarn",
        "webpack"
    ],
    "devDependencies": {
        "babel": "^6.23.0",
        "babel-core": "^6.23.1",
        "babel-eslint": "^7.1.1",
        "babel-loader": "^6.3.2",
        "babel-plugin-istanbul": "^4.1.3",
        "babel-plugin-transform-runtime": "^6.23.0",
        "babel-polyfill": "^6.23.0",
        "babel-preset-env": "^1.4.0",
        "babel-preset-es2015": "^6.22.0",
        "babel-preset-stage-0": "^6.24.1",
        "chai": "^3.5.0",
        "codecov": "^2.2.0",
        "esdoc": "^0.5.2",
        "esdoc-importpath-plugin": "^0.1.3",
        "eslint": "^3.16.1",
        "eslint-config-mocha": "^0.0.0",
        "eslint-config-standard": "^6.2.1",
        "eslint-friendly-formatter": "^2.0.7",
        "eslint-loader": "^1.6.3",
        "eslint-plugin-chai-expect": "^1.1.1",
        "eslint-plugin-import": "^2.2.0",
        "eslint-plugin-mocha-only": "^0.0.3",
        "eslint-plugin-promise": "^3.4.2",
        "eslint-plugin-standard": "^2.0.1",
        "istanbul": "^0.4.5",
        "mocha": "^3.4.1",
        "mochawesome": "^2.2.0",
        "power-assert": "^1.4.2",
        "thunk-mocha": "^1.0.8",
        "uglifyjs-webpack-plugin": "^0.2.1",
        "webpack": "^2.2.1",
        "webpack-dev-server": "^2.4.1"
    }
}
