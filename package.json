{
    "name": "quickstart-es6",
    "version": "1.0.0",
    "description": "es6 + webpack 环境快速搭建",
    "main": "index.js",
    "repository": "https://github.com/borenXue/QuickStart-es6.git",
    "author": "xueboren <xueboren001@outlook.com>",
    "license": "MIT",
    "scripts": {
        "dev": "export NODE_ENV=development && webpack-dev-server --inline --hot --colors --progress --config webpack.conf.js",
        "build": "export NODE_ENV=production && webpack --config webpack.conf.js",
        "test": "yarn eslint && yarn test:mocha",
        "test:mocha": "mocha --require intelli-espower-loader test",
        "reports": "yarn eslint:html && yarn report:mocha",
        "report:mocha": "mocha --reporter mochawesome --reporter-options reportDir=reports/mocha,reportFilename=mocha-report,inlineAssets=true  test",
        "eslint": "eslint --format 'node_modules/eslint-friendly-formatter' src",
        "eslint:html": "eslint --format html ./src/* -o ./reports/eslint/index.html"
    },
    "keywords": [
        "QuickStart",
        "es6",
        "eslint",
        "yarn",
        "webpack"
    ],
    "devDependencies": {
        "babel": "^6.23.0",
        "babel-core": "^6.23.1",
        "babel-eslint": "^7.1.1",
        "babel-loader": "^6.3.2",
        "babel-plugin-transform-runtime": "^6.23.0",
        "babel-preset-env": "^1.4.0",
        "babel-preset-es2015": "^6.22.0",
        "babel-preset-stage-0": "^6.24.1",
        "chai": "^3.5.0",
        "eslint": "^3.16.1",
        "eslint-config-mocha": "^0.0.0",
        "eslint-config-standard": "^6.2.1",
        "eslint-friendly-formatter": "^2.0.7",
        "eslint-loader": "^1.6.3",
        "eslint-plugin-chai-expect": "^1.1.1",
        "eslint-plugin-import": "^2.2.0",
        "eslint-plugin-mocha-only": "^0.0.3",
        "eslint-plugin-promise": "^3.4.2",
        "eslint-plugin-standard": "^2.0.1",
        "intelli-espower-loader": "^1.0.1",
        "mocha": "^3.4.1",
        "mochawesome": "^2.2.0",
        "power-assert": "^1.4.2",
        "thunk-mocha": "^1.0.8",
        "uglifyjs-webpack-plugin": "^0.2.1",
        "webpack": "^2.2.1",
        "webpack-dev-server": "^2.4.1"
    }
}
